

<%= form_for(@post,:url=> create_post_posts_path) do |f| %>
    <div class="hero-unit" align="center" style="width: 500px; padding-top: 0px" >
      <% if @post.errors.any? %>
          <div id="error_explanation">
            <h4><span class="label label-warning"> prohibited this post from being saved:</span></h4>

            <ul>
              <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div style="background-color: #5f9ea0; width: 500px"> <h3 style="color:#000000;" >Enter the details</h3></div><br />
      <div class="field">
        <div align="left" style="width: 210px;"><div class="label label-info" align="left" style="width: 30px;"><%= f.label :title %></div></div><div style="height: 10px"></div>
        <%= f.text_field :title %>
      </div><br />
      <div class="field">
        <div align="left" style="width: 210px;"><div class="label label-info" align="left" style="width: 80px;"><%= f.label :description %> </div></div><div style="height: 10px"></div>
        <%= f.text_area :description,:rows=>6%>  <br/>
      </div> <br />

      <div class="actions">
        <%= f.submit :class => 'btn btn-primary'%>
      </div>   <br />
      <div align="left"></div>
      <%=	 link_to "Back" ,posts_path %>
    </div>
<% end %>
