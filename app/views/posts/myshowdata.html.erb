<p id="notice" xmlns="http://www.w3.org/1999/html"><%= notice %></p>
<div class="hero-unit" align="center" style="width: 500px;">
  <table>
<tr><td>
  <div align="left" style="width: 120px;"><div class="label label-info" align="left" style="width: 30px;">Title:</div></div> </td>
  <td><%= @post.title %></td></tr><tr style="height: 15px;"></tr>


<tr><td>
  <div align="left" style="width: 120px;"><div class="label label-info" align="left" style="width: 80px;"><b>Description:</b></div></div> </td>
  <td><%= @post.description %></td></tr><tr style="height: 15px;"></tr>
 </table>

<div id="showcomments"> <%= render :partial => "comment_form" %> </div>

<%= form_for @comment,:url=> create_comment_post_path ,:method => "post",:remote => true  do |f| %>
    <div class="field">
      <div align="left" style="width: 210px;"><div class="label label-info" align="left" style="width: 80px;"><%= f.label :comment %></div></div><br />
      <%= f.text_area :comment,:id=>"new_comment" %>  <br/>
    </div> <br />

    <div class="actions">
      <%= f.submit :id=>"add_comment", :class => 'btn btn-primary'%>
    </div>
<% end %>
  </div>
<%=	 link_to "Back" ,posts_path %>


