<h3>Please Enter the details</h3>

<%= form_for(@post,:url=> mycreate_posts_path) do |f| %>
    <div class="hero-unit" align="center" style="width: 500px;">
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h4><span class="label label-warning"> prohibited this post from being saved:</span></h4>

          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
     <div align="left" style="width: 210px;"><div class="label label-info" align="left" style="width: 30px;"><%= f.label :title %></div></div>  <br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <div align="left" style="width: 210px;"><div class="label label-info" align="left" style="width: 80px;"><%= f.label :description %> </div></div>   <br />
      <%= f.text_area :description %>  <br/>
    </div> <br />

    <div class="actions">
      <%= f.submit :class => 'btn btn-primary'%>
    </div>
        </div>
<% end %>
